{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node --import=dotenv/config",
    "cli": "npm run build && node --import=dotenv/config ./dist/main.cli.js",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123",
    "mock:generate": "npm run cli -- --generate 100 ./mocks/rental-offers.tsv http://localhost:3123/mockData",
    "mock:import": "npm run cli -- --import ./mocks/rental-offers.tsv"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "chalk": "^5.4.1",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "pino-pretty": "^13.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "^2.8.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.18",
    "dotenv": "^16.5.0",
    "inversify": "^7.5.2",
    "pino": "^9.7.0",
    "reflect-metadata": "^0.2.2"
  }
}
